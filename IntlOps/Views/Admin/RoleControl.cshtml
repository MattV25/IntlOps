@model IEnumerable<IntlOps.Models.AccountViewModel.RolesViewModel>

<title>User Role Information</title>

<div class="container mngacc">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>User List</h2>
                    </div>
                </div>
            </div>
            <table class="table" id="roleTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Role Select</th>
                        <th>Save Changes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)</td>
                        @foreach (var role in item.RoleNames)
                        {
                            <td>@role</td>
                        }
                        <td>
                            @foreach (var role in item.RolesList)
                            {
                                <input type="checkbox" name="SelectedRole" value="@role.Value" checked="@item.Selected" class="checkbox-inline" />
                                <label class="control-label">@role.Value</label>
                            }
                        </td> 
                        <td>
                            <div class="btn-group">
                                <a asp-action="SaveRoles" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="glyphicon glyphicon-check"></i> 
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#roleTable').DataTable();
        });
    </script>
}
