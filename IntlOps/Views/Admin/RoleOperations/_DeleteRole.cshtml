@model IntlOps.Models.AccountViewModel.RolesViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Delete Role</h4>
</div>
<div class="modal-body form-horizontal">
    <form asp-action="DeleteRole" role="form">
        <input type="hidden" asp-for="Id" />
        Are you sure you want to delete the @Model.Name role?
        <div class="modal-footer">
            <button data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success" id="btn-submit" type="submit">Submit</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
