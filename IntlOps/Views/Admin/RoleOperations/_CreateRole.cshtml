@model IntlOps.Models.AccountViewModel.RolesViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Create Role</h4>
</div>
<div class="modal-body form-horizontal">
    <form asp-action="CreateRole" role="form" class="form-horizontal" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success" id="btn-submit" type="submit">Submit</button>
        </div>
    </form>
</div>

@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
